{
  "name": "forumone/renovate-example",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://satispress.forumone.dev/satispress/"
    }
  ],
  "require": {
    "johnpbloch/wordpress": "~5.8.0",
    "johnpbloch/wordpress-core": "~5.8.0",
    "wecodemore/wpstarter": "~2.0",
    "wpackagist-plugin/custom-post-type-ui": "1.10.0",
    "wpackagist-plugin/timber-library": "*",
    "wpackagist-plugin/wordpress-seo": "*"
  },
  "config": {
    "vendor-dir": "public/wp-content/vendor",
    "sort-packages": true,
    "platform": {
      "ext-mysqli": "1.0.0"
    },
    "optimize-autoloader": true
  },
  "scripts": {
    "install-wp-starter": [
      "WCM\\WPStarter\\Setup::run"
    ],
    "install-codestandards": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    ],
    "post-install-cmd": [
      "@install-wp-starter",
      "@install-codestandards"
    ],
    "post-update-cmd": [
      "@install-wp-starter",
      "@install-codestandards"
    ],
    "lint": "public/wp-content/vendor/bin/phpcs",
    "lint-fix": "public/wp-content/vendor/bin/phpcbf"
  },
  "extra": {
    "wordpress-install-dir": "public/wp",
    "wordpress-content-dir": "public/wp-content",
    "wpstarter": {
      "prevent-overwrite": [
        ".gitignore",
        "public/wp-config.php",
        "public/index.php"
      ]
    },
    "installer-paths": {
      "public/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "public/wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ],
      "public/wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  },
  "require-dev": {
    "php": ">=7.4.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "squizlabs/php_codesniffer": "^3.5",
    "wp-coding-standards/wpcs": "^2.3",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  }
}
